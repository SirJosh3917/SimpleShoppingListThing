<Window x:Class="ShoppingApp.UI.ShopperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingApp.UI"
        mc:Ignorable="d"
        Title="Shopper" Height="450" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="225" Margin="58,31,0,0" VerticalAlignment="Top" Width="250" ItemsSource="{Binding ShoppingLists}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
            </DataGrid.Columns>
    </Grid>
</Window>